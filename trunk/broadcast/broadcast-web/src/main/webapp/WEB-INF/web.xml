<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
    <display-name>Tririga Broadcaster</display-name>
    <servlet>
        <servlet-name>broadcast</servlet-name>
        <description>
            Broadcasts records to attached clients.
        </description>
        <servlet-class>com.trideveloper.broadcast.server.BroadcastServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>broadcast</servlet-name>
        <url-pattern>/broadcast</url-pattern>
    </servlet-mapping>
</web-app>
